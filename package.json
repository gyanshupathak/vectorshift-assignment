{
  "name": "vectorshift-assignment",
  "version": "1.0.0",
  "description": "VectorShift Frontend Technical Assignment",
  "scripts": {
    "dev": "npx concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && python3 -m uvicorn main:app --reload --port 8000",
    "start": "npm run dev",
    "install:frontend": "cd frontend && npm install",
    "install:all": "npm run install:frontend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
